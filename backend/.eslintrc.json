{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["prettier"],
  "plugins": ["prettier", "simple-import-sort"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "tabWidth": 2,
        "printWidth": 80,
        "singleQuote": true,
        "bracketSameLine": false,
        "trailingComma": "none",
        "arrowParens": "always"
      }
    ],
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error"
  }
}
